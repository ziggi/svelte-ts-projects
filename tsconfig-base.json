{
  "compilerOptions": {
    "rootDir": ".",
    "lib": [
      "es2021",
      "esnext",
    ],
    "allowJs": true,
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "alwaysStrict": false,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "./node_modules",
    "**/*.json",
    "**/*.js",
  ]
}
